-- // Auto Reroll + Print Result
-- Calls the RerollOrnament RemoteFunction once and prints everything returned.

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local rerollFunction = ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("RerollOrnament")

-- Deep print helper (for nested tables)
local function deepPrint(tbl, indent)
    indent = indent or 0
    local prefix = string.rep("  ", indent)
    for k, v in pairs(tbl) do
        if typeof(v) == "table" then
            print(prefix .. tostring(k) .. " = {")
            deepPrint(v, indent + 1)
            print(prefix .. "}")
        else
            print(prefix .. tostring(k) .. " =", v)
        end
    end
end

-- Argument (you can change 400001 to whatever ornament ID you want)
local args = {400002}

-- Call the reroll RemoteFunction
print("[ðŸŽ²] Rolling Ornament with ID:", args[1])
local result = rerollFunction:InvokeServer(unpack(args))

-- Print result
print("[ðŸ“¤] Reroll Result:")
if typeof(result) == "table" then
    deepPrint(result)
else
    print(result)
end

print("[âœ…] Reroll complete.")
