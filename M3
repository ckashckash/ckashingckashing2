-- TEST 2: DIRECT REMOTE INVOKE
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Remotes = ReplicatedStorage:WaitForChild("Remotes")
local RandomHeroEquipGrade = Remotes:WaitForChild("RandomHeroEquipGrade")

-- Replace this guid with the one you saw captured earlier
local testGuid = "b78ea7d3-fcaf-4c5a-8e76-5f8c4e376f58"

local args = {
    {
        drawId = 980001,
        guid = testGuid
    }
}

local success, result = pcall(function()
    return RandomHeroEquipGrade:InvokeServer(unpack(args))
end)

if success then
    print("✅ RemoteFunction returned:", result, typeof(result))
    if typeof(result) == "table" then
        for k, v in pairs(result) do
            print(" -", k, v)
            if typeof(v) == "table" then
                for kk, vv in pairs(v) do
                    print("   >", kk, vv)
                end
            end
        end
    end
else
    warn("❌ RemoteFunction error:", result)
end
